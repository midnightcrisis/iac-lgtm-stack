# Semaphore Nginx Proxy Configuration
# Managed by Ansible

upstream semaphore {
    server 127.0.0.1:{{ semaphore_port }};
    keepalive 32;
}

# Rate limiting
limit_req_zone $binary_remote_addr zone=semaphore_limit:10m rate=10r/s;

# HTTP server
server {
    listen 80;
    listen [::]:80;
    server_name {{ hostname }};

    {% if enable_ssl | default(false) %}
    # Redirect to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }

    # Let's Encrypt challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
    {% else %}
    # Proxy to Semaphore
    location / {
        proxy_pass http://semaphore;
        include /etc/nginx/snippets/semaphore-proxy.conf;
    }
    {% endif %}
}

{% if enable_ssl | default(false) %}
# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ hostname }};

    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/{{ hostname }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ hostname }}/privkey.pem;
    
    # SSL parameters
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Logging
    access_log /var/log/nginx/semaphore_access.log combined;
    error_log /var/log/nginx/semaphore_error.log warn;

    # Rate limiting
    limit_req zone=semaphore_limit burst=20 nodelay;

    # Client body size for file uploads
    client_max_body_size 100m;

    # Proxy to Semaphore
    location / {
        proxy_pass http://semaphore;
        include /etc/nginx/snippets/semaphore-proxy.conf;
    }

    # WebSocket support for real-time updates
    location /api/ws {
        proxy_pass http://semaphore;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }
}
{% endif %}
