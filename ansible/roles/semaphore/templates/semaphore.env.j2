# Semaphore Environment Variables
# Managed by Ansible

# Basic configuration
SEMAPHORE_HOME={{ semaphore_home }}
SEMAPHORE_PORT={{ semaphore_port }}
SEMAPHORE_INTERFACE={{ semaphore_interface }}
SEMAPHORE_WEB_HOST={{ semaphore_web_host | default('') }}

# Database
SEMAPHORE_DB_TYPE={{ semaphore_db_type }}
SEMAPHORE_DB_HOST={{ semaphore_db_host }}
SEMAPHORE_DB_PORT={{ semaphore_db_port }}
SEMAPHORE_DB_NAME={{ semaphore_db_name }}
SEMAPHORE_DB_USER={{ semaphore_db_user }}

# Environment
ENVIRONMENT={{ environment }}
NODE_ENV={{ 'production' if environment == 'production' else 'development' }}

# Ansible environment
ANSIBLE_HOST_KEY_CHECKING={{ 'True' if semaphore_ansible_host_key_checking else 'False' }}
ANSIBLE_STDOUT_CALLBACK={{ semaphore_ansible_stdout_callback }}
ANSIBLE_FORCE_COLOR=true
ANSIBLE_NOCOWS=1

# System
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:{{ semaphore_home }}/bin
PYTHONPATH={{ semaphore_home }}/lib/python3.10/site-packages
TZ={{ timezone | default('UTC') }}
